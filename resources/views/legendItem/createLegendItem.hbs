<!-- End Navbar -->
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <div class="row">
            <div class="col-6 d-flex align-items-center">
              <h6 class="mb-0">Create New Legend Item</h6>
            </div>
            <div class="col-6 text-end">
              <a class="btn mb-0" href="/legend-item"><i class="fas fa-caret-square-left"></i>&nbsp;&nbsp;Go back</a>
            </div>
          </div>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="card card-plain mt-2">
            <div class="card-header pb-0 text-left bg-transparent">
              {{!-- <h3 class="font-weight-bolder text-info text-gradient">Thông tin tài khoản mới</h3> --}}
              <p class="mb-0">Please fill in all the required information below!</p>
              <p class="mb-0 text-danger">{{message}}</p>
            </div>
            <div class="card-body">
              <form role="form" id="formCreateLegendItem" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-xl-6 col-lg-6 col-md-6">
                    <label>Vietnamese name</label>
                    <div class="mb-3">
                      <input name="nameVi" type="text" class="form-control" placeholder="Vietnamese name"
                        id="nameViCreate">
                    </div>
                    <label>English name</label>
                    <div class="mb-3">
                      <input name="nameEn" type="text" class="form-control" placeholder="English name"
                        id="nameEnCreate">
                    </div>
                    <label>Legend groups</label>
                    <div class="mb-3">
                      <select name="legendGroup" id="legendGroupCreate" class="form-control">
                        {{#each groupLegend}}
                          <option value="{{this._id}}">{{this.name.vi}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-6">
                    <label>Hex code color</label>
                    <div class="mb-3">
                      <input name="colorCode" type="text" class="form-control" placeholder="#000000"
                        id="colorCodeCreate">
                    </div>
                    <label>Image color (svg)</label>
                    <div class="mb-3">
                      <input id="colorImageCreate" name="colorImage" class="form-control" type="file" name="myImage"
                        accept=".png" />
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn bg-gradient-dark mt-4 mb-0">Create Item </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const formCreateLegendItem = document.getElementById('formCreateLegendItem');
  const nameViCreate = document.getElementById('nameViCreate');
  const nameEnCreate = document.getElementById('nameEnCreate');
  const legendGroupCreate = document.getElementById('legendGroupCreate');
  const colorCodeCreate = document.getElementById('colorCodeCreate');
  const colorImageCreate = document.getElementById('colorImageCreate');
  // const message = document.getElementById('message');
  formCreateLegendItem.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData();
    formData.append('nameVi', nameViCreate.value);
    formData.append('nameEn', nameEnCreate.value);
    formData.append('legendGroup', legendGroupCreate.value);
    formData.append('colorCode', colorCodeCreate.value);
    formData.append('colorImage', colorImageCreate.files[0]);

    fetch('/legend-item/create', {
      method: 'POST',
      body: formData,
      
    }).then((res) => {
      const response = {
        status: res.status,
        data: res.json(),
      }
      return response
    })
      .then(data => {
        data.data.then((val) => {
          if (data.status != 200) {
            Swal.fire({
              position: 'center',
              icon: 'error',
              text: val.message,
              showConfirmButton: false,
              timer: 1500
            })
          } else {
            Swal.fire({
              position: "center",
              icon: "success",
              text: val.message,
              showConfirmButton: false,
              timer: 1500
            }).then(() => {
              window.location.href = "/legend-item"
            });
          }
        })
      })
  })
</script>