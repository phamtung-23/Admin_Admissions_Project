
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <div class="row">
                <div class="col-6 d-flex align-items-center">
                  <h6 class="mb-0">Legend Item Management</h6>
                </div>
                <div class="col-6 text-end">
                  <a class="btn bg-gradient-dark mb-0" href="legend-item/create"><i class="fas fa-plus"></i>&nbsp;&nbsp;Add
                    New Legend Item</a>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Vietnamese Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">English Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Legend group</th>
                      <th class="text-center text-secondary text-xxs font-weight-bolder opacity-7">Background Color
                      </th>
                      <th class="text-center text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Image
                      </th>
                      <th class="text-secondary opacity-7" colspan='5'></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each legendItem}}
                    <tr>
                      <td class="px-3">
                        <div class="d-flex px-2 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 ml-3 text-sm">{{this.name.vi}}</h6>
                          </div>
                        </div>
                      </td>
                      <td class="px-3">
                        <div class="d-flex px-2 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 ml-3 text-sm">{{this.name.en}}</h6>
                          </div>
                        </div>
                      </td>
                      <td class="px-3">
                        <div class="d-flex px-2 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 ml-3 text-sm">{{this.legendGroup.name.vi}}</h6>
                          </div>
                        </div>
                      </td>
                      <td class="align-middle text-center text-sm">
                        {{#if this.colorCode}}
                        <span 
                          style="
                            display: inline-block;
                            width: 50px;
                            height: 30px;
                            background-color: {{this.colorCode}};"></span>
                        {{else}}
                        <p class="text-xs font-weight-bold mb-0">No color</p>
                        {{/if}}
                      </td>
                      <td class="align-middle text-center text-sm">
                        {{#if this.colorImage}}
                        <img width="50px" height="50px" src="{{this.colorImage}}" alt="image error">
                        {{else}}
                        <p class="text-xs font-weight-bold mb-0">No image</p>
                        {{/if}}
                      </td>
                      <td class="align-middle text-center" style="width: 150px !important;">
                        <a href="/legend-item/{{this._id}}/edit" class="text-secondary font-weight-bold text-xs">
                          Edit
                        </a>
                      </td>
                      <td class="align-middle text-center" style="width: 150px !important;">
                        <a href="javascript:;" class="text-secondary font-weight-bold text-xs" id="deleteUser"
                          data-toggle="tooltip" data-original-title="Edit user"
                          onclick="deleteLegendItem('{{this._id}}','{{this.name.vi}}')">
                          Delete
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
  
  <script>
    function deleteLegendItem(id, name) {
      Swal.fire({
        text: `Are you sure you want to delete Legend item "${name}" ?`,
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        confirmButtonText: "Yes",
        cancelButtonText: "Cancel",
        reverseButtons: true
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/legend-item/${id}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
          }).then((res) => {
            const response = {
              status: res.status,
              data: res.json(),
            }
            return response
          })
            .then(data => {
              data.data.then((val) => {
                if (data.status != 200) {
                  Swal.fire({
                    position: 'center',
                    icon: 'error',
                    text: val.message,
                    showConfirmButton: false,
                    timer: 1500
                  })
                } else {
                  Swal.fire({
                    position: "center",
                    icon: "success",
                    text: val.message,
                    showConfirmButton: false,
                    timer: 1500
                  }).then(() => {
                    window.location.href = "/legend-item"
                  });
                }
              })
            })
        }
      });
    }


  </script>
