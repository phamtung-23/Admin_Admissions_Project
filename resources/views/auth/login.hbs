   <script>
      //xử li form đăng nhập
      let formSignIn = document.getElementById('form-signIn')

      let usernameSignIn = document.getElementById('usernameSignIn')
      let passSignIn = document.getElementById('passSignIn')

      let alertErrorSignIn = document.getElementById('errorSignIn')

      formSignIn.addEventListener('submit', () => {
        const loginData = {
          username: usernameSignIn.value,
          password: passSignIn.value,
        }
        fetch('/login',{
          method: 'POST',
          body: JSON.stringify(loginData),
          headers: {'Content-Type': 'application/json'},
        }).then((res) => {
            const response = {
              status: res.status,
              data: res.json(),
            }
              return response
            })
            .then(data => {
              data.data.then((val)=>{
                if (data.status != 200){
                  Swal.fire({
                    position: 'center',
                    icon: 'error',
                    text: val.message.message,
                    showConfirmButton: false,
                    timer: 1500
                    }).then(()=>{
                        
                    })
                }else{
                  window.location.replace(`/`)
                }
              })
            })
        })
    </script>

