<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <div class="row">
            <div class="col-6 d-flex align-items-center">
              <h6 class="mb-0">Upload New Legend Item</h6>
            </div>
            <div class="col-6 text-end">
              <a class="btn mb-0" href="/icon"><i class="fas fa-caret-square-left"></i>&nbsp;&nbsp;Go back</a>
            </div>
          </div>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="card card-plain mt-2">
            <div class="card-header pb-0 text-left bg-transparent">
              {{!-- <h3 class="font-weight-bolder text-info text-gradient">Thông tin tài khoản mới</h3> --}}
              <p class="mb-0">Please fill in all the required information below!</p>
              <p class="mb-0 text-danger">{{message}}</p>
            </div>
            <div class="card-body">
              <form role="form" id="formCreateIcon" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-xl-6 col-lg-6 col-md-6">
                    <label>Icon Name</label>
                    <div class="mb-3">
                      <input name="iconName" type="text" class="form-control" placeholder="Icon name" id="iconNameCreate">
                    </div>
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-6">
                    <label>Choose Icon</label>
                    <div class="mb-3">
                      <input id="iconImage" accept="image/png" name="iconImage" class="form-control" type="file" />
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn bg-gradient-dark mt-4 mb-0">Upload Icon </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const formCreateIcon = document.getElementById('formCreateIcon');
  const iconNameCreate = document.getElementById('iconNameCreate');
  const iconImage = document.getElementById('iconImage');
  // check type file, only accept image
  iconImage.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file.type != 'image/png') {
      Swal.fire({
        position: 'center',
        icon: 'error',
        text: 'Please choose a PNG file!',
        showConfirmButton: false,
        timer: 1500
      })
      iconImage.value = '';
    }
  })
  // const message = document.getElementById('message');
  formCreateIcon.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData();
    formData.append('iconNameCreate', iconNameCreate.value);
    formData.append('iconImage', iconImage.files[0]);

    fetch('/icon/', {
      method: 'POST',
      body: formData,
      
    }).then((res) => {
      const response = {
        status: res.status,
        data: res.json(),
      }
      return response
    })
      .then(data => {
        data.data.then((val) => {
          if (data.status != 200) {
            Swal.fire({
              position: 'center',
              icon: 'error',
              text: val.message,
              showConfirmButton: false,
              timer: 1500
            })
          } else {
            Swal.fire({
              position: "center",
              icon: "success",
              text: val.message,
              showConfirmButton: false,
              timer: 1500
            }).then(() => {
              window.location.href = "/icon"
            });
          }
        })
      })
  })
</script>