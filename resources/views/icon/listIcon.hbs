
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <div class="row">
                <div class="col-6 d-flex align-items-center">
                  <h6 class="mb-0">Icon Management</h6>
                </div>
                <div class="col-6 text-end">
                  <a class="btn bg-gradient-dark mb-0" href="icon/create"><i class="fas fa-plus"></i>&nbsp;&nbsp;Upload New Icon</a>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Icon Name</th>
                      <th class="text-center text-secondary text-xxs font-weight-bolder opacity-7">Status
                      </th>
                      <th class="text-center text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Image
                      </th>
                      <th class="text-center text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Projects
                      </th>
                      <th class="text-secondary opacity-7" colspan='5'></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each icons}}
                    <tr>
                      <td>
                        <div class="d-flex px-3 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 ml-3 text-sm">{{this.name}}</h6>
                          </div>
                        </div>
                      </td>
                      {{#if (compare this.status 'In use')}}
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-success">In use</span>
                      </td>
                      {{else}}
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-secondary">Not in use</span>
                      </td>
                      {{/if}}
                      <td class="align-middle text-center text-sm">
                        {{#if this.imageUrl}}
                        <img width="50px" height="50px" src="{{this.imageUrl}}" alt="image error">
                        {{else}}
                        <p class="text-xs font-weight-bold mb-0">No image</p>
                        {{/if}}
                      </td>
                      <td class="align-middle text-center text-sm">
                        {{#if this.projects}}
                          <p class="text-xs font-weight-bold mb-0">{{this.projects}}</p>
                        {{else}}
                          <p class="text-xs font-weight-bold mb-0">No project</p>
                        {{/if}}
                      </td>
                      <td class="align-middle text-center" style="width: 100px !important;">
                        <a href="/icon/{{this._id}}/detail" class="text-secondary font-weight-bold text-xs">
                          Detail
                        </a>
                      </td>
                      <td class="align-middle text-center" style="width: 100px !important;">
                        <a href="/icon/{{this._id}}/edit" class="text-secondary font-weight-bold text-xs">
                          Edit
                        </a>
                      </td>
                      <td class="align-middle text-center" style="width: 100px !important;">
                        <a href="javascript:;" class="text-secondary font-weight-bold text-xs" id="deleteUser"
                          data-toggle="tooltip" data-original-title="Edit user"
                          onclick="deleteIcon('{{this._id}}','{{this.name}}','{{this.status}}')">
                          Delete
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  
  
  <script>
    function deleteIcon(id, name, status) {
      if (status == 'In use'){
        Swal.fire({
          position: 'center',
          icon: 'error',
          text: 'The icon is currently in use and cannot be deleted!',
          showConfirmButton: false,
          timer: 1500
        })
      }else{
        Swal.fire({
          text: `Are you sure you want to delete Icon name "${name}" ?`,
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          confirmButtonText: "Yes",
          cancelButtonText: "Cancel",
          reverseButtons: true
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/icon/${id}`, {
              method: 'DELETE',
              headers: { 'Content-Type': 'application/json' },
            }).then((res) => {
              const response = {
                status: res.status,
                data: res.json(),
              }
              return response
            })
              .then(data => {
                data.data.then((val) => {
                  if (data.status != 200) {
                    Swal.fire({
                      position: 'center',
                      icon: 'error',
                      text: val.message,
                      showConfirmButton: false,
                      timer: 1500
                    })
                  } else {
                    Swal.fire({
                      position: "center",
                      icon: "success",
                      text: val.message,
                      showConfirmButton: false,
                      timer: 1500
                    }).then(() => {
                      window.location.href = "/icon"
                    });
                  }
                })
              })
          }
        });
      }
    }


  </script>
